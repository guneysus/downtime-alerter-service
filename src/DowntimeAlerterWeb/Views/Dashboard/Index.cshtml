@model DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
</div>

<div class="row">
    <h2>Monitors</h2>
    <div class="col-md-12">

        <span class="mb-4"><a class="btn btn-success" asp-area="" asp-controller="Monitor" asp-action="Add" asp-route-id="0">Add</a></span>

        <table class="table table-striped table-hover table-sm mt-3">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Interval</th>
                    <th scope="col">URL</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Monitors)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Interval</td>
                        <td>@item.Url</td>
                        <th>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-primary" asp-area="" asp-controller="Monitor" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <button class="btn btn-danger" onclick="deleteMonitor(@item.Id)">Delete</button>
                            </div>

                        </th>
                    </tr>

                }

            </tbody>
        </table>

    </div>

</div>

<script>
    var deleteMonitor = function (id) {
        Monitor.remove(id);
    }
</script>